<view class="content">

  <!-->立论阶段 </-->
  <view class='section-title'>
    立论阶段
    <switch id="config1" class="pull-right" checked bindchange="switchChange" />
  </view>
  <view class='hr'></view>
  <view>
    <text>时间限制(秒)</text>
    <slider id="config1" bindchange="sliderChange" show-value min='10' max='200' value='{{configs.config1.time}}'/>
  </view>
  <view>
    <text>声音提醒</text>
    <radio-group id="config1" class="voice" bindchange="radioChange">
      <label>
        <radio value="15" checked />提前15秒</label>
      <label>
        <radio value="10" />提前10秒</label>
      <label>
        <radio value="5" />提前5秒</label>
    </radio-group>
  </view>

